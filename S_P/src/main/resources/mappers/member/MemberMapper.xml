<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.care.root.mybatis.member.MemberMapper">
	<resultMap type="com.care.root.member.dto.MemberDTO" id="member">
		<id property="id" column="id" />
		<result property="pwd" column="pw"/>
		<result property="addr" column="addr"/>
		<result property="sessionId" column="session_id"/>
	</resultMap>
	<select id="getMember" resultMap="member">
		select * from membership where id=#{id}
	</select>
	<select id="memberInfo" resultMap="member">
		select * from membership
	</select>
	<select id="getData" resultMap="member">
		select * from membership
		<if test="aaa != null">
			where id=#{aaa}
		</if>
	</select>
	<insert id="register">
		insert into membership (id, pw, addr) values(#{id},#{pwd},#{addr})
	</insert>
	<update id="keepLogin">
		update membership set session_id = #{autoLogin} where id=#{id}
	</update>
	
</mapper>









